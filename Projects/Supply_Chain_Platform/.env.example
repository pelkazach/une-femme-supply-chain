# Database (Railway PostgreSQL)
# Use DATABASE_PUBLIC_URL for local development, DATABASE_URL for Railway-deployed services
DATABASE_URL=postgresql://user:password@host:port/database

# WineDirect API
WINEDIRECT_CLIENT_ID=your_client_id
WINEDIRECT_CLIENT_SECRET=your_client_secret

# Azure Document Intelligence
AZURE_DOC_INTELLIGENCE_ENDPOINT=https://your-resource.cognitiveservices.azure.com
AZURE_DOC_INTELLIGENCE_KEY=your_key

# Redis (for Celery task queue)
REDIS_URL=redis://localhost:6379/0

# Slack notifications
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/xxx/yyy/zzz

# Application
DEBUG=false
API_HOST=0.0.0.0
API_PORT=8000
